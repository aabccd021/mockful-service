{
  "name": "mockful-service",
  "scripts": {
    "build": "bun build ./src/index.ts --compile --bytecode --sourcemap --outfile ./dist/mockful-service",
    "bundle": "bun build ./src/index.ts --target bun --outfile ./dist/mockful-service.js",
    "format": "biome format --error-on-warnings --indent-style=space --line-width=100",
    "lint": "biome lint --error-on-warnings",
    "check": "tsc",
    "test": "bun test --bail"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "biome": "latest",
    "openid-client": "latest",
    "typescript": "latest"
  }
}
